@model StoreManager.Models.Companies

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Companies</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganizationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
    Stores
    <table>
        <tr>
            <th class="col-sm-2">
                Name
            </th>
            <th class="col-sm-2">
                Country
            </th>
            <th class="col-sm-2">
                Latitude
            </th>
            <th class="col-sm-2">
                Longitude
            </th>
        </tr>

        @foreach (var store in Model.Stores) {
            <tr>
                <td class="col-sm-10">
                    @Html.DisplayFor(c => store.Name)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(c => store.Country)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(c => store.Latitude)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(c => store.Longitude)
                </td>
            </tr>

        }
        </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
